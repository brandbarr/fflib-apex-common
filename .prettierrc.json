{
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"endOfLine": "lf",
	"plugins": ["prettier-plugin-apex"],
	"overrides": [
		{
			"files": "*.{cls,apex}",
			"options": {
				"parser": "apex"
			}
		}
	]
}
